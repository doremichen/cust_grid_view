<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageView android:id="@+id/thumbImage" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerInParent="true" />
	<CheckBox android:id="@+id/itemCheckBox" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_alignParentLeft="true" 
		android:layout_alignParentTop="true"/>
	<TextView android:id="@+id/ImageText" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_below="@id/thumbImage" android:text="@string/hello_world"/>
</RelativeLayout>